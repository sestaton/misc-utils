#TODO:

#
# Prompt appearance
#
mytime() { printf "%*s\r" $(tput cols) "$(date '+**%T**')"; }    # http://askubuntu.com/questions/118873/how-to-add-timestamp-to-bash-after-completed-command
PROMPT_COMMAND=mytime
export PS1='\[\033[0;35m\]\h\[\033[0;33m\] \W\[\033[0m\]$ '      # added double quotes, changed 00m to 0m 7.10.12

#
# local bin
#
export PATH=$PATH:$HOME/apps/bin                                 # a collection of binaries and links created to make this file and my PATH manageable

#
# PERL5LIB
#
export PERL5LIB=''                                               # this is to unset all the system paths that screw up my installation

#
# Perlbrew
#
source ~/perl5/perlbrew/etc/bashrc

#
# PYTHONPATH
#
export PYTHONPATH=$HOME/apps/screed/build/lib:
export PYTHONPATH=$PYTHONPATH:$HOME/apps/khmer/python

#
# Code libraries, compilers, libpaths, etc.
# 
#export PATH=/usr/local/cuda/bin:$PATH                           # for compiling GPU code
#export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH   # for compiling GPU code

#
# some non-standard utilities
#
export PATH=$PATH:$HOME/apps/pbzip2-1.1.6
export PATH=$PATH:$HOME/apps/bin/parallel-20121122/bin
export PATH=$PATH:$HOME/apps/bin/filo/bin                        # for stream operations: https://github.com/arq5x/filo.git
export PATH=$PATH:/usr/local/kent/latest/bin                     # Kent source
alias stats='/home/jmblab/statonse/apps/bin/filo/bin/stats'

#
# bioinformatics programs installed in /home
#
export PATH=$PATH:$HOME/apps/Community_latest                    # Louvain method code
#export PATH=$PATH:$HOME/apps/cdbfasta                           # not on the zcluster    
export PATH=$PATH:$HOME/apps/lh3-seqtk-771d60b                   # seqtk
export PATH=$PATH:$HOME/apps/pal2nal.v14
export PATH=$PATH:/usr/local/vmatch/latest
export TRF_COMMAND=$HOME/apps/bin/trf400.linuxAMD64.exe
export PATH=$PATH:$HOME/apps/gicl
export PATH=$PATH:$HOME/apps/kmer-latest/trunk/meryl/

#
# ENV vars for DAWGPAWS
#
export DIALIGN2_DIR=$HOME/apps/dialign/
export FIND_LTR_ROOT='$HOME/apps/LTRDeNovo/LTR/tool/'
export LTR_FINDER='$HOME/apps/ltr_finder/ltr_finder'
export PROSITE_DIR='$HOME/apps/ltr_finder/ps_scan/'
export TRNA_DB='$HOME/apps/ltr_finder/tRNAdb/Os-tRNAs.fa'

# bioinfo-related aliases
alias raxml='/usr/local/raxml/latest/raxmlHPC-PTHREADS-SSE3'
alias trf='trf400.linuxAMD64.exe'                                # TODO: make this a symlink not an alias
